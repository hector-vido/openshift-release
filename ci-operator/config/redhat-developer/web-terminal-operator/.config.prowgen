slack_reporter:
    - channel: '#wt-ci'
      job_names:
        - periodic-ci-redhat-developer-web-terminal-operator-main-web-terminal-ocp4.16-lp-rosa-classic-web-terminal-rosa-aws
        - periodic-ci-redhat-developer-web-terminal-operator-main-web-terminal-ocp4.16-lp-rosa-classic-web-terminal-rosa-aws
        - periodic-ci-redhat-developer-web-terminal-operator-main-web-terminal-ocp4.17-lp-rosa-classic-web-terminal-rosa-aws
        - periodic-ci-redhat-developer-web-terminal-operator-main-web-terminal-ocp4.17-lp-rosa-classic-web-terminal-rosa-aws
      job_states_to_report:
        - success
        - failure
        - error
      report_template: '{{if eq .Status.State "success"}} :slack-green: Job *{{.Spec.Job}}* ended with *{{.Status.State}}*. <{{.Status.URL}}|View logs> {{else}} :failed: Job *{{.Spec.Job}}* ended with *{{.Status.State}}*. <{{.Status.URL}}|View logs> {{end}}'
