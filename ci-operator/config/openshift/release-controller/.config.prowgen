slack_reporter:
    - channel: '#team-crt'
      job_names:
        - govulncheck
      job_states_to_report:
        - success
        - error
        - failure
      report_template: '{{ if eq .Status.State "success" }} :check: {{ else }} :warning: {{ end }}Job *{{.Spec.Job}}* ended with *{{.Status.State}}*. <{{.Status.URL}}|View logs> {{ if eq .Status.State "success" }} :check: {{ else }} :warning: {{ end }}'
