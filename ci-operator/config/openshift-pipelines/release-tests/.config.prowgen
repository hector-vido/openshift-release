slack_reporter:
    - channel: '#forum-p2p-cspi'
      job_names:
        - openshift-pipelines-serverless-rosa-classic-417-rc
        - openshift-pipelines-serverless-rosa-classic-416-iib
      job_states_to_report:
        - success
        - failure
        - error
      report_template: '{{if eq .Status.State "success"}} :slack-green: Job *{{.Spec.Job}}* ended with *{{.Status.State}}*. <{{.Status.URL}}|View logs> {{else}} :failed: Job *{{.Spec.Job}}* ended with *{{.Status.State}}*. <{{.Status.URL}}|View logs> {{end}}'
    - channel: '#tektoncd-pipeline-ci'
      job_names:
        - openshift-pipelines-interop-aws
        - openshift-pipelines-interop-aws-fips
      job_states_to_report:
        - success
        - failure
        - error
      report_template: '{{if eq .Status.State "success"}} :slack-green: Job *{{.Spec.Job}}* ended with *{{.Status.State}}*. <{{.Status.URL}}|View logs> {{else}} :failed: Job *{{.Spec.Job}}* ended with *{{.Status.State}}*. <{{.Status.URL}}|View logs> {{end}}'
