slack_reporter:
    - channel: '#image-based-ci'
      job_names:
        - image-based-upgrade-e2e-serial-conformance-baseline
        - seedgen-aws-ocp-4-15
        - image-based-upgrade-e2e-parallel-conformance
        - image-based-upgrade-e2e-parallel-conformance-baseline
        - image-based-upgrade-e2e-serial-conformance
      job_states_to_report:
        - failure
        - success
        - error
        - aborted
      report_template: '{{if eq .Status.State "success"}} :slack-green: Job *{{.Spec.Job}}* ended with *{{.Status.State}}*. <{{.Status.URL}}|View logs> {{else}} :alert-siren: Job *{{.Spec.Job}}* ended with *{{.Status.State}}*. <{{.Status.URL}}|View logs> {{end}}'
